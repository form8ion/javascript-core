{
  "name": "@form8ion/javascript-core",
  "description": "core logic for form8ion tools related to JavaScript, like javascript-scaffolder and lift-javascript",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "engines": {
    "node": "^18.17 || >=20.6.1"
  },
  "type": "commonjs",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "repository": "form8ion/javascript-core",
  "bugs": "https://github.com/form8ion/javascript-core/issues",
  "homepage": "https://npm.im/@form8ion/javascript-core",
  "runkitExampleFilename": "./example.js",
  "exports": {
    "require": "./lib/index.js",
    "import": "./lib/index.mjs"
  },
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "sideEffects": false,
  "scripts": {
    "test": "npm-run-all --print-label build --parallel lint:* --parallel test:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hosts npm",
    "lint:js": "eslint . --cache",
    "lint:md": "remark . --frail",
    "generate:md": "remark . --output",
    "pregenerate:md": "run-s build",
    "lint:sensitive": "ban",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "test:unit:base": "npm-run-all --print-label build --parallel test:unit:vitest test:unit:mocha",
    "test:unit:mocha": "DEBUG=any mocha 'src/**/*-test.js'",
    "test:unit:vitest": "DEBUG=any vitest run",
    "lint:peer": "npm ls >/dev/null",
    "prepare": "husky install",
    "lint:engines": "ls-engines",
    "lint:gherkin": "gherkin-lint",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "test:integration:base": "NODE_OPTIONS=--enable-source-maps DEBUG=any cucumber-js test/integration --profile base",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "test:integration:wip:debug": "DEBUG=test run-s 'test:integration:wip'",
    "test:integration:focus": "run-s 'test:integration:base -- --profile focus'",
    "lint:publish": "publint --strict"
  },
  "files": [
    "example.js",
    "lib/"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "dependencies": {
    "@form8ion/core": "^4.2.0",
    "@form8ion/execa-wrapper": "^1.0.0-alpha.1",
    "@form8ion/overridable-prompts": "^1.1.0",
    "@hapi/hoek": "^11.0.0",
    "@travi/cli-messages": "^1.0.4",
    "deepmerge": "^4.2.2",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@babel/register": "7.24.6",
    "@cucumber/cucumber": "10.9.0",
    "@form8ion/babel-preset": "1.6.135",
    "@form8ion/commitlint-config": "1.0.76",
    "@form8ion/eslint-config": "7.0.11",
    "@form8ion/eslint-config-cucumber": "1.4.1",
    "@form8ion/eslint-config-mocha": "3.0.6",
    "@form8ion/remark-lint-preset": "6.0.4",
    "@rollup/plugin-babel": "6.0.4",
    "@travi/any": "3.1.2",
    "ban-sensitive-files": "1.10.6",
    "c8": "10.1.2",
    "chai": "4.5.0",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "gherkin-lint": "4.2.4",
    "husky": "9.1.6",
    "jest-when": "3.6.0",
    "lockfile-lint": "4.14.0",
    "ls-engines": "0.9.3",
    "mocha": "10.7.3",
    "mock-fs": "5.2.0",
    "npm-run-all2": "6.2.3",
    "publint": "0.2.11",
    "remark-cli": "12.0.1",
    "remark-toc": "9.0.0",
    "remark-usage": "11.0.1",
    "rimraf": "6.0.1",
    "rollup": "4.22.2",
    "rollup-plugin-auto-external": "2.0.0",
    "sinon": "19.0.2",
    "testdouble": "3.20.2",
    "vitest": "2.1.1"
  }
}
